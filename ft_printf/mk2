SRCS	= main.c ft_printf.c

LIBFT = ./libft/*.c

OBJS 	= $(SRCS:.c=.o)

CC		= @gcc

RM		= rm -f

CFLAGS 	= 

NAME	= prueba

CLEAR	= clear

SANI	= -fsanitize=address -g3

all: $(NAME)

$(NAME): $(OBJS)
		@$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

pr: $(OBJS)
		@$(CC) $(OBJS) $(LIBFT) $(SANI) -o probando

pr2: $(OBJS)
		@$(CC) $(OBJS) $(LIBFT) -o probando

clean:
		@$(RM) $(OBJS)

fclean: clean
		@$(RM) $(NAME)

re: fclean $(NAME)

.PHONY: all clean fclean re
